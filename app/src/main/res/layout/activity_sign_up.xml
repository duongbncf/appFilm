<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1D1D1D">

    <TextView
        android:id="@+id/tvCreateAnAccount"
        android:layout_width="185dp"
        android:layout_height="83dp"
        android:text="Create an account"
        android:textColor="@color/white"
        android:layout_marginTop="63dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="36dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtUserNameorPassword"
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:hint="Username or Email"
        android:textColorHint="#676767"
        android:textSize="12dp"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/tvCreateAnAccount"
        app:layout_constraintStart_toStartOf="@id/tvCreateAnAccount"
        android:layout_marginTop="48dp"
        android:textColor="#676767"
        android:drawableStart="@drawable/person"
        android:drawablePadding="10dp"/>
    <EditText
        android:id="@+id/edtPasswordCreate"
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:hint="Password"
        android:textColor="#676767"
        android:textSize="12dp"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColorHint="#676767"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/edtUserNameorPassword"
        app:layout_constraintStart_toStartOf="@id/edtUserNameorPassword"
        android:layout_marginTop="31dp"
        android:drawableStart="@drawable/locker"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:hint="Confilm Password"
        android:textSize="12dp"
        android:padding="20dp"
        android:inputType="textPassword"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@id/edtPasswordCreate"
        android:layout_marginTop="31dp"
        android:textColorHint="#676767"
        app:layout_constraintStart_toStartOf="@id/edtPasswordCreate"
        android:textColor="#676767"
        android:drawableStart="@drawable/locker"
        android:drawablePadding="10dp"/>
    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="258dp"
        android:layout_height="28dp"
        android:text="By clicking the Register button, you agree to the public offer"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtConfirmPassword"
        android:layout_marginTop="19dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="@id/edtConfirmPassword"
        android:textColor="@color/white"
        android:lineHeight="14dp"/>

