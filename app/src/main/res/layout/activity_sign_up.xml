        <TextView
        android:id="@+id/tvSignInWith"
        android:layout_width="67dp"
        android:layout_height="18dp"
        android:text="sign in with"
        android:textColor="@color/white"
        android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="125dp"
        android:layout_marginStart="0dp"/>

    <ImageView
        android:id="@+id/btn_google"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/google"
        app:layout_constraintTop_toBottomOf="@id/tvSignInWith"
        app:layout_constraintStart_toStartOf="@id/tvTerms"
        android:layout_marginTop="28dp"
        android:layout_marginStart="78dp"/>

    <ImageView
        android:id="@+id/btn_twitter"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:background="@drawable/twitter"
        app:layout_constraintStart_toEndOf="@id/btn_google"
        app:layout_constraintTop_toBottomOf="@id/tvSignInWith"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_google" />

    <ImageView
        android:id="@+id/btn_facebook"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/facebook"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignInWith"
        app:layout_constraintStart_toEndOf="@id/btn_twitter"
        app:layout_constraintBottom_toBottomOf="@id/btn_google"/>

    <ImageView
        android:id="@+id/btnRegister"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_next_svgrepo_com"
        app:layout_constraintEnd_toEndOf="@id/edtConfirmPassword"
        app:layout_constraintTop_toBottomOf="@id/edtConfirmPassword" />

